<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add approval requests smart button to employee form -->
    <record id="hr_employee_form_approval_button" model="ir.ui.view">
        <field name="name">hr.employee.form.approval.button</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <div class="oe_button_box" position="inside">
                <button type="object" name="action_view_approval_requests"
                        class="oe_stat_button" icon="fa-check-square-o">
                    <field name="approval_request_count" widget="statinfo" string="Approval Requests"/>
                </button>
            </div>
        </field>
    </record>

</odoo>